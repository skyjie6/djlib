<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#555555"
              android:orientation="vertical"
              android:paddingBottom="16dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:paddingTop="16dp"
              tools:context="com.example.dangjie.djdemo.activity.MainActivity">

    <com.example.dangjie.djdemo.view.roundconner.RoundCornerRectView
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:onClick="test"
        android:background="@drawable/bg_game_app_unselected"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:textSize="12sp"
            android:text="asdasdasdasdasdasdasdadsasdasdasd"
            android:textColor="@color/white"/>
    </com.example.dangjie.djdemo.view.roundconner.RoundCornerRectView>

    <com.example.dangjie.djdemo.view.roundconner.RoundCornerRectView
        android:layout_width="156dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/gradient_base_color"
        android:orientation="horizontal"
        app:cornerHeigh="5dp"
        app:cornerWidth="5dp"/>

    <ImageView
        android:id="@+id/id_one"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"/>

    <RelativeLayout
        android:id="@+id/id_two"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>
